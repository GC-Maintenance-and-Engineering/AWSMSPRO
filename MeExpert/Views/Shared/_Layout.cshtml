                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
            <div class="sidebar-background" style="background-image: url(http://gcgpgcmeapp01/MSPRO/Images/06.a1ccb0cb.jpg)">
            </div>
        </aside>
    </div>
    <div class="content-wrapper" style="background: #eff1f4;">
        @*<div class="container body-content">*@
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>@ViewBag.Title</h1>
                    </div>
                </div>
            </div>
        </section>
        <div class="content">
            <div class="container-fluid">
                <div class="bg-load" id="loader">
                    <div class="loadingio-spinner-wedges-trgvdqyjh4h">
                        <div class="ldio-28x3fii487t">
                            <div><div><div></div></div><div><div></div></div><div><div></div></div><div><div></div></div></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="alertBrowserDelModal" style="display:none;z-index: 9999;padding-top: 12%;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h6>Try again with chrome browser</h6>
                    <a href="chrome://../Home/Index" id="btn-link-chrome" title="Chrome">
                        <i style="font-size: 64px;" class="fab fa-chrome"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <footer class="main-footer no-printme">
        <div class="float-right d-none d-sm-inline-block">
            <b>GCME</b>
        </div>
    </footer>
</body>

</html>
<script type="text/javascript">
    $(document).ready(function () {
        var isIE = false || !!document.documentMode;
        var isEdge = !isIE && !!window.StyleMedia;
        if (isIE) {
            $('#alertBrowserDelModal').modal({ backdrop: 'static', keyboard: false });
        }
        if (isEdge) {
            $('#alertBrowserDelModal').modal({ backdrop: 'static', keyboard: false });
        }
        //checkAuthen();
        var url = new URL(window.location.href); 
        var token = localStorage.getItem('token');
        if (token == null) {
            localStorage.setItem('urlRedirect', url.href);
            window.location.replace('@azure_ad_url' + 'signin/' + encodeURIComponent(url.href+'Home'));
        }
        function checkAuthen() {
            $.ajax({
                url: '@Url.Action("UserAuthen", "Home")',
                type: 'GET',
                dataType: 'json',
                async: false,
                success: function (response) {
                },
                error: function (xhr, status, error) {
                    if (xhr.status === 401) {
                        localStorage.setItem('urlRedirect', url.href);
                        window.location.replace('@azure_ad_url' + 'signin/' + encodeURIComponent(url.href));
                    } else {
                        console.error('Error:', status, error);
                    }
                }
            });
        }


        if (url.pathname == "/Requisition/Detail") {
            $('li.nav-item a[href="~/Requisition"]').addClass('active');
        }
        else {
            $('li.nav-item a[href="' + url.pathname + '"]').addClass('active');
        }
        $('li.nav-item a').filter(function () {
            return this.href == url;
        }).addClass('active');
        if (navigator.userAgent.indexOf('MSIE') !== -1
            || navigator.appVersion.indexOf('Trident/') > -1) {
            $('.sidebar-background').hide();
        }

    });
</script>
